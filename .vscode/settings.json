{
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.sfdx": true
  },

  "apex-pmd.enable": true,
  "apex-pmd.lintTask.enable": true,
  "apex-pmd.lintTask.runOnSave": true,
  "apex-pmd.lintTask.runOnType": true,
  "apex-pmd.lintTask.runOnTypeDelay": 500,

  "eslint.enable": true,
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  
  "eslint.workingDirectories": ["force-app"],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ] 
}
